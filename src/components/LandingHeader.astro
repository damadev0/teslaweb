---
import Logo from "./Logo.astro"
import BurguerMenu from "./BurguerMenu.astro"
import Cross from "./Cross.astro"
---

<header
	id="landing-header"
	class="py-2.5 pr-8 flex items-center fixed top-0 w-full justify-between z-40 text-white"
>
	<!-- Logo -->
	<nav class="flex flex-grow pl-12 basis-0 z-40">
		<a href="#hero-section">
			<Logo />
		</a>
	</nav>

	<!-- Center side Links -->
	<nav class="px-2 hidden laptop:inline-block nav-links-fade-in">
		<ul
			class="flex text-sm [&>li>a]:transition-colors [&>li>a]:duration-500 [&>li>a]:text-current [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2"
		>
			<li><a href="#Model S">Model S</a></li>
			<li><a href="#Model 3">Model 3</a></li>
			<li><a href="#Model X">Model X</a></li>
			<li><a href="#Model Y">Model Y</a></li>
			<li><a href="#Solar Roof">Solar Roof</a></li>
			<li><a href="#Solar Panels">Solar Panels</a></li>
			<li><a href="#Accessories">Powerwall</a></li>
		</ul>
	</nav>

	<!-- Right side Links -->
	<nav class="flex flex-grow justify-end basis-0 hidden laptop:flex nav-links-fade-in">
		<ul 
			class="flex text-sm [&>li>a]:transition-colors [&>li>a]:duration-500 [&>li>a]:text-current [&>li>a]:font-medium [&>li>a]:inline-block [&>li>a]:px-4 [&>li>a]:py-2"
		>
			<li><a href="#">Shop</a></li>
			<li><a href="#">Account</a></li>
			<!-- <li><a href="#">Menu</a></li> -->
		</ul>
	</nav>

	<!-- Navbar Mobile Menu Button -->
	<div class="flex inline-block laptop:hidden nav-links-fade-in py-2 z-40">
		<button id="toggle-menu" type="button" aria-controls="mobile-navbar">
			<BurguerMenu id="burguer-menu" />
			<Cross id="cross-menu" />
		</button>
	</div>

	<!-- Mobile Navbar -->
	<nav id="mobile-navbar" class="hidden menu-fade-in transition-colors duration-200 flex flex-col h-screen w-screen inline-block laptop:hidden absolute top-0 bg-white text-zinc-900 peer-checked:block">
		<div class="flex flex-col h-full [&>ul]:flex [&>ul]:flex-col [&>ul]:mx-12 [&>li>a]:transition-colors [&>ul>li>a]:duration-500 [&>ul>li>a]:text-xl [&>ul>li>a]:font-normal [&>ul>li>a]:inline-block [&>ul>li>a]:px-4">
			<ul
				class="mt-24 mb-12 gap-y-8"
			>
				<li><a href="#Model S">Model S</a></li>
				<li><a href="#Model 3">Model 3</a></li>
				<li><a href="#Model X">Model X</a></li>
				<li><a href="#Model Y">Model Y</a></li>
				<li><a href="#Solar Roof">Solar Roof</a></li>
				<li><a href="#Solar Panels">Solar Panels</a></li>
				<li><a href="#Accessories">Powerwall</a></li>
			</ul>

			<ul 
				class="mt-auto mb-12 gap-y-2 [&>li>a]:py-2"
			>
				<li><a href="#">Shop</a></li>
				<li><a href="#">Account</a></li>
				<!-- <li><a href="#">Menu</a></li> -->
			</ul>
		</div>
	</nav>

	<!-- Hover bakground for links -->
	<div
		id="menu-backdrop"
		class={`
			absolute bg-black/5 backdrop-blur-lg rounded
			translate-x-[var(--left)] translate-y-[var(--top)]
			left-0 top-0
			w-[var(--width)] h-[var(--height)]
			transition-all duration-500
			ease-in-out opacity-0 -z-10
		`}
	>
	</div>
</header>

<!-- Nav Links Backdrop -->
<script>
	const listItem = document.querySelectorAll("#landing-header li")
	const menuBackDrop = document.querySelector("#menu-backdrop") as HTMLElement

	listItem.forEach((item) => {
		item.addEventListener("mouseenter", () => {
			const { left, top, width, height } = item.getBoundingClientRect()

			menuBackDrop.style.setProperty("--left", `${left}px`)
			menuBackDrop.style.setProperty("--top", `${top}px`)
			menuBackDrop.style.setProperty("--width", `${width}px`)
			menuBackDrop.style.setProperty("--height", `${height}px`)

			menuBackDrop.style.opacity = "1"
			menuBackDrop.style.visibility = "visible"
		})

		item.addEventListener("mouseleave", () => {
			menuBackDrop.style.opacity = "0"
			menuBackDrop.style.visibility = "hidden"
		})
	})
</script>

<!-- Scroll -->
<script>
	const $header = document.querySelector('#landing-header') as HTMLElement

	const observerOptions = {
		root: null,
		rootMargin: '0px', // As soon as the element enters the viewport
		threshold: 0.9 // 90% of the element visible
	}

	const observer = new IntersectionObserver(entries => {
		entries.forEach(entry => {
			const { isIntersecting } = entry
			if (isIntersecting) {
				const color = entry.target.getAttribute('data-header-color')
				$header.style.color = color
			}
		})
	}, observerOptions)

	const $sections = document.querySelectorAll('.landing-section')
	$sections.forEach((section) => observer.observe(section))
</script>

<!-- Mobile Menu -->
<script>
	const toggleMenu = document.querySelector('#toggle-menu')
	const burguerMenu = document.querySelector('#burguer-menu')
	const crossMenu = document.querySelector('#cross-menu')
	
	toggleMenu.addEventListener('click', () => {
		burguerMenu.classList.contains('hidden')
		? closeMobileMenu()
		: openMobileMenu()
		document.querySelector('#mobile-navbar').classList.toggle('hidden')
	})

	function openMobileMenu() {
		document.querySelector('#logo-icon>path').setAttribute('fill', '#000000')
		crossMenu.classList.remove('hidden')
		burguerMenu.classList.add('hidden')
	}

	function closeMobileMenu() {
		document.querySelector('#logo-icon>path').setAttribute('fill', 'currentColor')
		burguerMenu.classList.remove('hidden')
		crossMenu.classList.add('hidden')
	}
</script>

<style scoped>
	.nav-links-fade-in {
    	animation: fadeIn 1s;
	}
	.menu-fade-in {
    	animation: fadeIn 120ms;
	}
	@keyframes fadeIn {
  	0% { opacity: 0; }
  	100% { opacity: 1; }
	}
</style>